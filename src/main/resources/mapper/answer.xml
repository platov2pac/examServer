<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exams.dao.AnswerDAO">
    <update id="setAnswer">
        update answers a
        set value    = #{answer},
            answered = true
        where id_users = #{id}
    </update>
</mapper>